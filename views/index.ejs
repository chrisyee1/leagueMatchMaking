<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>League Match-Up Checker</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <script src="../node_modules/table-dragger/dist/table-dragger.min.js"></script>
  </head>
  <body>
    <div class="container">
      <fieldset>
        <form action="/" method="post">
          <input name="summName" type="text" class="ghost-input" placeholder="Enter a summoner name" required>
          <input type="submit" class="ghost-button" value="Get Game Info">
        </form>
      </fieldset>
      <table id="table">
        <thead>
        <tr>
          <th class='handle'>header1</th>
          <th class='handle'>header2</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>conten1</td>
          <td>conten2</td>
        </tr>
        </tbody>
      </table>
    </div>
    <div class="returnData">
        <% if(summName !== null){ %>
            <p><%= summName %></p>
          <% } %>
          <% if(error !== null){ %>
              <p><%= error %></p>
          <% } %>
    </div>
    <script>
        var el = document.getElementById('table');
        var dragger = tableDragger(el);
        dragger.on('drop',function(from, to){
        console(from);
        console(to);
        });
    </script>
  </body>
</html>